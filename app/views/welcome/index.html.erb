
<div id="background">
  <header class="cf">
    <div class="wrapper_wide">
      <a href="#" id="logo">CityWeTravel</a>
        <nav class = "cf">
          <ul class = "cf">
            <% unless student_signed_in? %>
              <li><%= link_to "Log In", new_student_session_path %></li>
              <li><%= link_to "Sign Up", new_student_registration_path %></li>

            <% else %>
              <li><%= link_to "Update Profile", edit_student_registration_path %></li>
              <li><%= link_to "Sign Out", destroy_student_session_path, method: :delete %></li>
            <% end %>
          </ul>
        </nav>
    </div>
  </header>

  <div class="wrapper_skinny">
    <h1>Share your schedule and what's happening in your city with other travelers and locals</h1>
    <!-- <%= link_to "Sign Up", new_student_registration_path, class: "button button_highlight" %> -->
  </div>
</div>
<br/><br/>
<div id="podcasts" class="cf">
  <div class="wrapper">
    <ul>
      <% @students.each do |student| %>
        <%= link_to student do %>

          <li>
            <%= image_tag student.photo.url(:medium) %>
            <div class="podcast_overview">
              <h2><%= student.name %></h2>
              <p class="episode_count"></p>
            </div>
          </li>
        <% end %>
      <% end %>
    </ul>
  </div>
</div>
